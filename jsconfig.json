{
  "compilerOptions": {
    "target": "es2016",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@static/*": [
        "static/*"
      ],
      "$static/*": [
        "static/*"
      ],
      "$components/*": [
        "src/components/*"
      ],
      "$/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}